@model Operation

<h2>@Model.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacationRequest in Model.VacationRequests)
        {
            @if (vacationRequest.HeadApproval == "approved" && vacationRequest.Approval == "pending")
            {
                <tr>
                    <td>@vacationRequest.Employee.Name</td>
                    <td>@vacationRequest.StartDate.ToShortDateString()</td>
                    <td>@vacationRequest.EndDate.ToShortDateString()</td>
                    <td>@vacationRequest.Approval</td>
                    <td>
                        <form asp-action="ApproveVacationRequest" asp-route-id="@vacationRequest.VacationRequestId">
                            <input type="submit" value="Approve" class="btn btn-success" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
